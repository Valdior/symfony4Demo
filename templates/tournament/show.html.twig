{% extends 'base.html.twig' %}

{% block title %}Tournament - {{ parent() }}{% endblock %}

{% block body %}    
    <h3>{{ tournament.startDate|date('d/m/Y') }}</h3>
    
    <h3>
    Pelotons
    <a href="{{ path("peloton.add", {"tournament" : tournament.id}) }}"><span class="btn btn-primary">Ajouter un peloton</span></a>
    {% if is_granted('ROLE_ADMIN') %}
        <p>yeah admin :D</p>
    {% endif %}
    </h3>    

    <ul>
    {% for peloton in tournament.pelotons %}    
        <li><a href="{{ path('peloton.show', {'tournament': tournament.id, 'peloton': peloton.id}) }}">{{ peloton.id }}</a></li>
    
    {% else %}
        <lip>Pas encore de peloton disponible</li>
    {% endfor %}
    </ul>

    <h3>
    Archés enregistrés
    </h3>
    <table>
        <tr>
            <th>FullName</th>
            <th>Points</th>
            <th>10</th>
            <th>9</th>
        </tr>
        <tr>
            <td>1</td>
            <td>2</td>
            <td>3</td>
            <td>4</td>
        </tr>
    </table>
{% endblock %}