{% extends 'base.html.twig' %}

{% block title %}Compétition !{% endblock %}

{% block body %}

    <h1>Listes des Compétitions</h1>

{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}

    <table class="table">
        <tr>
            <th>Organisateur</th>
            <th>Date</th>
        </tr>
        {% for tournament in tournaments %}
        <tr>        
            <td>{{ tournament.organizer.name }}</td>
            <td><a href="{{ path('tournament.show', {'tournament': tournament.id}) }}">{{ tournament.startDate|date('d/m/Y') }} au {{ tournament.endDate|date('d/m/Y') }}</a> </td>        
        </tr>
        {% else %}
            <p>Aucune compétition pour l'instant</p>
        {% endfor %}
    </table>

     <a href="{{ path("tournament.add") }}"><span class="btn btn-primary">Ajouter une compétition</span></a>

{% endblock %}